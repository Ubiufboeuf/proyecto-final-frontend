---
import { ContactViaPhone } from '@/components/ContactViaPhone'
import { Icon } from '@/components/Icon'
import { IconBus, IconMail } from '@/components/Icons'

---

<footer class='w-full h-fit min-h-44 text-white bg-gray-800 dark:bg-gray-950 flex flex-col items-center justify-center gap-2'>
  <div class='flex items-center justify-center gap-2'>
    <Icon class='size-6 text-orange-500 dark:text-orange-600'>
      <IconBus />
    </Icon>
    <strong class='text-xl leading-8'>Berrutti</strong>
  </div>
  <ContactViaPhone client:idle />
  <a
    href='mailto:berruttiturismo@adinet.com.uy'
    target='_blank'
    class='flex items-center justify-center w-fit max-w-[calc(100%-32px)] h-fit gap-2 dark:hover:text-orange-600 hover:text-orange-400 touch:active:text-orange-400 transition-colors px-4 py-1 -my-1'
  >
    <Icon class='size-4'>
      <IconMail />
    </Icon>
    <span class='line-clamp-1 overflow-ellipsis max-w-full'>
      berruttiturismo@adinet.com.uy
    </span>
  </a>
</footer>