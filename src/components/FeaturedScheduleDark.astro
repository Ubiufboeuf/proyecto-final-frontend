---
import type { HorarioDestacado } from '@/env'

interface Props {
  schedule: HorarioDestacado
}

const { schedule } = Astro.props
const { description, hours, title, darkColor } = schedule
---

<!-- Como esta card solo se muestra en tema oscuro, no hace falta especificar el dark: -->

<article class='hidden dark:flex w-full h-fit max-w-lg flex-col items-center py-4 gap-2 rounded-lg bg-gray-700/50 text-gray-100'>
  <h1 class='text-md font-semibold' style={{ color: darkColor }}>{title}</h1>
  <p class='text-sm text-gray-300'>{description}</p>
  <div class='w-fit max-w-full flex gap-1 flex-wrap px-4 justify-center'>
    { hours.map((hora) => (
      <span class='text-sm h-fit w-fit px-2 py-0.5 rounded-md dark:text-gray-100 dark:bg-gray-500/50'>{hora}</span>
    )) }
  </div>
</article>