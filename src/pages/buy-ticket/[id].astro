---
import Layout from '@/layouts/Layout.astro'
import { getRouteById } from '@/services/routeService'

const { id } = Astro.params
if (!id) {
	// esto no debería pasar por el redirect en la configuración de astro
	Astro.redirect('/routes/')
	return
}

let route
try {
	route = getRouteById(id)
} catch (err) {
	console.error(err)
}
---

<Layout title='Comprar boleto'>
	<main class='max-w-screen-2xl px-6 flex flex-col gap-4'>
		<section class='w-full h-fit'>
			<h1>Finalizar Compra</h1>
		</section>
	</main>
</Layout>