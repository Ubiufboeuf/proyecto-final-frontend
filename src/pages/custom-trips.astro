---
import { Icon } from '@/components/Icon'
import { IconMapPin } from '@/components/Icons'
import Layout from '@/layouts/Layout.astro'

const tripTypes = [
  { title: 'Excursion de un día', description: 'Viaje de ida y vuelta en el mismo día' },
  { title: 'Fin de semana', description: 'Viaje de 2-3 días con estadía' },
  { title: 'Viaje corporativo', description: 'Transporte para empresas y eventos' },
  { title: 'Viaje escolar', description: 'Transporte educativo y excursiones escolares' },
  { title: 'Turismo', description: 'Paquetes turísticos con múltiples destinos' },
  { title: 'Evento especial', description: 'Bodas, cumpleaños, celebraciones' },
  { title: 'Completamente personalizado', description: 'Diseña tu viaje desde cero' }
]
---

<Layout title='Viajes Personalizados' class='px-6 mb-12'>
  <section class='flex flex-col items-center w-full h-fit pb-8 pt-20'>
		<h1 class='text-4xl font-bold text-gray-800 dark:text-gray-50 mb-4 text-center'>Viajes Personalizados</h1>
		<p class='text-gray-700 dark:text-gray-300 text-xl text-center max-w-160'>Diseña tu viaje perfecto. Elige el tipo de ómnibus, servicios y destinos que mejor se adapten a tus necesidades</p>
	</section>
  <section class='h-fit w-full p-4 gap-4 rounded-lg border border-gray-300 dark:border-0 bg-white dark:bg-gray-700/50'>
    <header class='flex items-center gap-3 w-fit h-fit text-orange-500 dark:text-orange-600-light'>
      <Icon class='size-6'>
        <IconMapPin />
      </Icon>
      <h1 class='text-2xl font-bold text-gray-800 dark:text-gray-100'>Tipo de Viaje</h1>
    </header>
    <main class='grid md:grid-cols-2 grid-cols-1 gap-4'>
      { tripTypes.map(({ title, description }) => (
          <label class='flex flex-col h-fit w-full border rounded-lg p-4 border-gray-300 dark:border-0 text-gray-600 dark:text-gray-300 dark:bg-gray-700/50'>
            <input type='radio' name='inputTripType' hidden />
            <strong class='text-gray-700 dark:text-gray-200'>{title}</strong>
            <span>{description}</span>
          </label>
      )) }
    </main>
  </section>
</Layout>