---
import { Icon } from '@/components/Icon'
import { IconBus, IconCreditCard, IconBox, IconDolar, IconPeople, IconFile, IconWifi, IconSofa, IconTV } from '@/components/Icons'
import BusTypeDark from '@/components/services/BusTypeDark.astro'
import BusTypeLight from '@/components/services/BusTypeLight.astro'
import type { BusType } from '@/env'
import Layout from '@/layouts/Layout.astro'
import { typesOfBuses } from '@/lib/typesOfBuses'
import type { JSXInternal } from 'node_modules/preact/src/jsx'

const services = [
	{
		icon: IconBus,
		title: 'Líneas-Pasajes',
		description: 'Venta de pasajes para todas nuestras rutas nacionales e internacionales. Ofrecemos diferentes categorías de servicio: común, semi-cama y cama ejecutivo. Reservas con hasta 30 días de anticipación.',
		details: [
			'Rutas nacionales e internacionales',
			'Diferentes categorías de confort',
			'Reservas anticipadas disponibles',
			'Descuentos por compra anticipada',
		]
	},
	{
		icon: IconCreditCard,
		title: 'Líneas-Abonos',
		description: 'Abonos mensuales y semanales para viajeros frecuentes con importantes descuentos. Ideal para estudiantes, trabajadores y personas que viajan regularmente.',
		details: [
			'Abonos semanales y mensuales',
			'Hasta 40% de descuento',
			'Válido en rutas seleccionadas',
			'Renovación automática disponible',
		]
	},
	{
		icon: IconBox,
		title: 'Encomiendas',
		description: 'Servicio de envío de paquetes, documentos y mercadería a todo el país. Seguimiento en línea y entrega puerta a puerta disponible en ciudades principales.',
		details: [
			'Envíos a todo Uruguay',
			'Seguimiento en línea',
			'Entrega puerta a puerta',
			'Seguro incluido hasta $50.000',
		]
	},
	{
		icon: IconFile,
		title: 'Trámites',
		subtitle: 'Renovación C.I., Certificados de Antecedentes y Buena Conducta',
		description: 'Gestión de trámites oficiales ante organismos públicos. Ahorra tiempo y evita filas. Servicio disponible en nuestras oficinas principales.',
		details: [
			'Renovación de Cédula de Identidad',
			'Certificados de Antecedentes',
			'Certificados de Buena Conducta',
			'Gestión completa del trámite',
		]
	},
	{
		icon: IconPeople,
		title: 'Partidas',
		subtitle: 'Nacimiento, Defunción y Matrimonio',
		description: 'Obtención de partidas oficiales del Registro Civil. Servicio rápido y confiable para todos tus trámites legales y administrativos.',
		details: [
			'Partidas de Nacimiento',
			'Partidas de Defunción',
			'Partidas de Matrimonio',
			'Entrega en 24-48 horas',
		]
	},
	{
		icon: IconDolar,
		title: 'Giros',
		description: 'Envío y recepción de dinero de forma segura y rápida a través de nuestra red nacional. Sin necesidad de cuenta bancaria.',
		details: [
			'Envíos a toda la red nacional',
			'Sin cuenta bancaria requerida',
			'Comisiones competitivas',
			'Disponible inmediatamente',
		]
	},
]
---

<Layout title='Servicios' class='px-6'>
	<section class='flex flex-col items-center w-full h-fit pb-8 pt-20'>
		<h1 class='text-4xl font-bold text-gray-800 dark:text-gray-50 mb-4 text-center'>Nuestros Servicios</h1>
		<p class='text-gray-700 dark:text-gray-300 text-xl text-center max-w-160'>Ofrecemos una amplia gama de servicios para satisfacer todas tus necesidades de transporte y gestión</p>
	</section>
	<section class='py-4 pb-8 max-w-screen-2xl w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 place-items-center gap-6'>
		{
			services.map(({ icon: ServiceIcon, title, subtitle, description, details }) => (
				<article class='w-full max-w-160 h-full p-6 flex flex-col items-center gap-4 bg-white dark:bg-gray-700/50 border border-gray-300 text-gray-700 text-sm rounded-xl dark:border-0'>
					<div class='w-full h-fit flex items-center justify-center'>
						<Icon class='size-12 text-orange-500 dark:text-orange-600-light'>
							<ServiceIcon />
						</Icon>
					</div>
					<div class='flex flex-col items-center'>
						<h1 class='text-lg font-bold uppercase text-center dark:text-gray-50'>{title}</h1>
						<span class='text-orange-500 text-sm text-center flex px-2 dark:text-gray-100'>{subtitle}</span>
					</div>
					<div class='w-full max-w-140 flex justify-center h-fit dark:text-gray-100'>
						<p class='text-center'>{description}</p>
					</div>
					<div>
						<ul class='list-disc text-center flex flex-col items-center'>
							{ details.map((detail) => (
									<li class='list-item text-center w-fit text-gray-500 dark:text-gray-100'>{detail}</li>
							)) }
						</ul>
					</div>
				</article>
			))
		}
	</section>
	<section class='w-full flex flex-col items-center px-4 gap-2 py-4'>
		<h1 class='text-3xl font-bold text-gray-800 mb-4 text-center dark:text-gray-50'>Tipos de Ómnibus</h1>
		<p class='max-w-160 text-center text-gray-600 dark:text-gray-100'>Contamos con diferentes categorías de ómnibus para que elijas la que mejor se adapte a tu viaje y presupuesto</p>
	</section>
	<section class='py-4 pb-12 px-0 max-w-screen-2xl w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 place-items-center gap-6'>
		{
			typesOfBuses.map((busType) => (
				<BusTypeLight busType={busType} />
				<BusTypeDark busType={busType} />
			))
		}
	</section>
	<section class='w-full h-fit pb-8 max-w-screen-2xl flex justify-center'>
		<div class='bg-white dark:bg-gray-700/50 w-full h-fit pt-8 pb-4 xs:px-24 px-4 rounded-xl shadow-md'>
			<h1 class='text-2xl font-bold text-center text-gray-800 dark:text-gray-50'>Información Adicional</h1>
			<div class='w-full justify-around gap py-6 flex gap-x-40 flex-wrap gap-y-8'>
				<div class='flex gap-2 flex-col items-center md:items-center'>
					<h2 class='text-orange-500 text-lg font-semibold'>Horarios de Atención</h2>
					<ul class='flex flex-col gap-2 text-gray-600 dark:text-gray-100 list-disc list-inside'>
						<li class='min-w-fit text-nowrap'>Lunes a Viernes: 6:00 - 22:00</li>
						<li class='min-w-fit text-nowrap'>Sábados: 6:00 - 20:00</li>
						<li class='min-w-fit text-nowrap'>Domingos: 7:00 - 21:00</li>
						<li class='min-w-fit text-nowrap'>Feriados: Horarios especial</li>
					</ul>
				</div>
				<div class='flex gap-2 flex-col items-center md:items-center'>
					<h2 class='text-orange-500 text-lg font-semibold'>Formas de Pago</h2>
					<ul class='flex flex-col gap-2 text-gray-600 dark:text-gray-100 list-disc list-inside'>
						<li class='min-w-fit text-nowrap'>Lunes a Viernes: 6:00 - 22:00</li>
						<li class='min-w-fit text-nowrap'>Sábados: 6:00 - 20:00</li>
						<li class='min-w-fit text-nowrap'>Domingos: 7:00 - 21:00</li>
						<li class='min-w-fit text-nowrap'>Feriados: Horarios especial</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<section class='w-full h-fit min-h-fit py-8 px-4 pb-16 flex flex-col gap-4 justify-center items-center'>
		<h1 class='text-2xl font-bold text-gray-800 dark:text-gray-50 text-center'>¿Necesitas más información?</h1>
		<p class='text-gray-700 dark:text-gray-100 pb-4 text-center'>Contáctanos para conocer más detalles sobre nuestros servicios</p>
		<a href='/contact' class='h-fit w-fit p-3 px-8 rounded-lg transition-colors cursor-pointer bg-orange-500 text-white hover:bg-orange-600 touch:active:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-600/80 dark:touch:active:bg-orange-600/80'>Contactar</a>
	</section>
</Layout>